<UserControl x:Class="ControlSpendingWPF.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlSpendingWPF"
        xmlns:authentication="clr-namespace:ControlSpendingWPF.Authentication"
        xmlns:wallets="clr-namespace:ControlSpendingWPF.Wallets"
        mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate DataType="{ x:Type local:AuthViewModel}">
            <authentication:AuthView></authentication:AuthView>
        </DataTemplate>
        <DataTemplate DataType="{ x:Type wallets:WalletsViewModel}">
            <wallets:WalletsView></wallets:WalletsView>
        </DataTemplate>
    </UserControl.Resources>
    <ContentControl Content="{Binding CurrentViewModel}"></ContentControl>
</UserControl>